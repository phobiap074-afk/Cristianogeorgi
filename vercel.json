{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "pythonVersion": "3.11",
        "includeFiles": [
          "app.py",
          "templates/**",
          "static/**"
        ]
      }
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "routes": [
    { "src": "^/static/(.*)$", "dest": "/static/$1" },
    { "src": "^/api/(.*)$", "dest": "/api/index.py" },
    { "src": "^(?!/api/).*$", "dest": "/api/index.py" }
  ]
}
