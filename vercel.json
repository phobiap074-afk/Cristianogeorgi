{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "app.py",
          "templates/**",
          "static/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index.py" },
    { "src": "^(?!/api/).*$", "dest": "/api/index.py" }
  ]
}
